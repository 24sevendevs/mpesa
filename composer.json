{
    "name": "tfs/mpesa",
    "description": "Modern Laravel package for Safaricom M-Pesa Daraja API integration with comprehensive B2C, B2B, STK Push, and Balance inquiry support",
    "keywords": [
        "mpesa",
        "safaricom",
        "daraja",
        "laravel",
        "payment",
        "kenya",
        "stk-push",
        "b2c",
        "b2b",
        "lipa-na-mpesa",
        "mobile-money",
        "payment-gateway"
    ],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Kelvin Maina",
            "email": "thiongokelvin5@gmail.com",
            "role": "Developer"
        },
        {
            "name": "George Njoroge",
            "email": "georgenjoroge977@gmail.com",
            "role": "Developer"
        }
    ],
    "homepage": "https://github.com/24sevendevs/mpesa",
    "support": {
        "issues": "https://github.com/24sevendevs/mpesa/issues",
        "source": "https://github.com/24sevendevs/mpesa"
    },
    "require": {
        "php": "^7.4|^8.0|^8.1|^8.2|^8.3",
        "illuminate/support": "^7.0|^8.0|^9.0|^10.0|^11.0",
        "illuminate/http": "^7.0|^8.0|^9.0|^10.0|^11.0",
        "illuminate/cache": "^7.0|^8.0|^9.0|^10.0|^11.0",
        "guzzlehttp/guzzle": "^6.5|^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0|^10.0",
        "orchestra/testbench": "^5.0|^6.0|^7.0|^8.0|^9.0",
        "mockery/mockery": "^1.4"
    },
    "autoload": {
        "psr-4": {
            "TFS\\Mpesa\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TFS\\Mpesa\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "TFS\\Mpesa\\MpesaServiceProvider"
            ],
            "aliases": {
                "Mpesa": "TFS\\Mpesa\\Facades\\Mpesa"
            }
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "optimize-autoloader": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}